{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@persistence/*": ["persistence/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src"]
}
